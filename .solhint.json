{
  "extends": ["solhint:recommended"],
  "rules": {
    "prettier/prettier": "error",
    "avoid-throw": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "quotes": ["error", "single"],
    "compiler-version": ["error", "^0.8.11"],
    "func-visibility": ["warn",{"ignoreConstructors":true}],
    "state-visibility": "error"
  },
  "plugins": ["prettier"]
}
